<%- contentFor('script')%>
<script>
    jQuery(document).ready(function() {
        $('form').validate({
            errorElement: 'span', //default input error message container
            errorClass: 'help-inline', // default input error message class
            focusInvalid: false, // do not focus the last invalid input
            rules: {
                contract_no: {
                    required: true,
                    remote: {
                        url: "/contract/validate_contract_no",     //后台处理程序
                        type: "post",               //数据发送方式
                        dataType: "json",           //接受数据格式
                        data: {                     //要传递的数据
                            contract_no: function() {
                                return $("#contract_no").val();
                            }
                        }
                    }
                },
                grade_id: {
                    required: true
                },
                prepay: {
                    required: true
                },
                recommend_type: {
                    required: true
                },
                recommender_id: {
                    required: true
                },
                start_date: {
                    required: true
                }
            },
            messages: {
                contract_no: {
                    required: "请输入合同编号",
                    remote: "合同编号已存在，请重新输入"
                },
                grade_id: {
                    required: "请选择年级"
                },
                prepay: {
                    required: "请输入已付款"
                },
                recommend_type: {
                    required: "请输入推荐方式"
                },
                recommender_id: {
                    required: "请选择推荐人"
                },
                start_date: {
                    required: "请选择合同开始日期"
                }
            },
            errorPlacement: function(error, element) {
                error.appendTo( element.parents(".controls") );
            },
            highlight: function (element) { // hightlight error inputs
                $(element)
                    .closest('.help-inline').removeClass('ok'); // display OK icon
                $(element)
                    .closest('.control-group').removeClass('success').addClass('error'); // set error class to the control group
            },
            unhighlight: function (element) { // revert the change dony by hightlight
                $(element)
                    .closest('.control-group').removeClass('error'); // set error class to the control group
            },
            success: function (label) {
                label
                    .addClass('valid').addClass('help-inline ok') // mark the current input as valid and display OK icon
                    .closest('.control-group').removeClass('error').addClass('success'); // set success class to the control group
            }
        });
    });

    function showRecommend(isShow) {
        if (isShow) {
            $('#recommend_type_div').show();
            $('#recommender_id_div').show();
        } else {
            $('#recommend_type_div').hide();
            $('#recommender_id_div').hide();
            $('#recommend_type').val('');
            $('#recommender_id').val('').select2();
        }
    }
</script>