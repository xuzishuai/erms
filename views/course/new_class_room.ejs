<div class="row-fluid">
    <div class="span12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                </div>
                <div class="actions">
                    <a href="/course/class_room_list" class="btn yellow"><i class="icon-chevron-left"></i> 返回</a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="/course/do_create_class_room" class="form-horizontal" method="post">
                    <div class="control-group">
                        <label class="control-label">教室名称<span class="required">*</span></label>
                        <div class="controls">
                            <input type="text" class="m-wrap span6" name="name" id="name">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">教室状态<span class="required">*</span></label>
                        <div class="controls">
                            <select class="span6 select2" tabindex="1" name="status_id" id="status_id">
                                <%for (let i = 0; i < status.length; i++){%>
                                <%if (status[i].id != '03'){%>
                                <option <%if (status[i].id == '02'){%>selected<%}%> value="<%= status[i].id%>"><%= status[i].name%></option>
                                <%}%>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn green"><i class="icon-ok"></i> 提交</button>
                        <button type="button" class="btn" onclick="javascript:history.back(-1);"><i class="icon-remove"></i> 取消</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- contentFor('title')%>
新增教室
