<div class="row-fluid">
    <div class="span12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                </div>
                <div class="actions">
                    <a href="/course/course_schedule_list" class="btn yellow"><i class="icon-chevron-left"></i> 返回</a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="/course/do_update_course_schedule" class="form-horizontal" method="post">
                    <input id="id" name="id" value="<%= courseScheduleObj.id%>" type="hidden">
                    <div class="control-group">
                        <label class="control-label">合同编号</label>
                        <div class="controls">
                            <span id="contract_no" class="text bold"><%= contract.contract_no%></span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">学员</label>
                        <div class="controls">
                            <span id="student_no" class="text bold"><%= student.name%>(<%= student.student_no%>)</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">科目</label>
                        <div class="controls">
                            <span id="subject_id" class="text bold"><%= subjectMap[contractDetail.subject_id].name%></span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">年级</label>
                        <div class="controls">
                            <span id="grade_id" class="text bold"><%= gradeMap[contractDetail.grade_id].name%></span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">上课日期<span class="required">*</span></label>
                        <div class="controls">
                            <div class="input-append date date-picker">
                                <input id="lesson_date" name="lesson_date" size="16" type="text" readonly class="m-wrap" value="<%= dateUtil.dateFormat(courseScheduleObj.lesson_date)%>"/>
                                <span class="add-on"><i class="icon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">课时<span class="required">*</span></label>
                        <div class="controls">
                            <select class="span6 select2" tabindex="1" name="lesson_period_id" id="lesson_period_id">
                                <%for (let i = 0; i < lessonPeriod.length; i++){%>
                                <option <%if (courseScheduleObj.lesson_period_id == lessonPeriod[i].id){%>selected<%}%> value="<%= lessonPeriod[i].id%>"><%= lessonPeriod[i].name%></option>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">教师<span class="required">*</span></label>
                        <div class="controls">
                            <select class="span6 select2" tabindex="1" name="teacher_id" id="teacher_id">
                                <%for (let i = 0; i < teachers.length; i++){%>
                                <option <%if (courseScheduleObj.teacher_id == teachers[i].id){%>selected<%}%> value="<%= teachers[i].id%>"><%= teachers[i].name%></option>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">教室<span class="required">*</span></label>
                        <div class="controls">
                            <select class="span6 select2" tabindex="1" name="class_room_id" id="class_room_id">
                                <%for (let i = 0; i < classRooms.length; i++){%>
                                <option <%if (courseScheduleObj.class_room_id == classRooms[i].id){%>selected<%}%> value="<%= classRooms[i].id%>"><%= classRooms[i].name%></option>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn green"><i class="icon-ok"></i> 提交</button>
                        <button type="button" class="btn" onclick="javascript:history.back(-1);"><i class="icon-remove"></i> 取消</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- contentFor('title')%>
编辑排课
