<li>
    <i class="icon-angle-right"></i>
    <a href="javascript:void(0);">排课</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/course/course_schedule_list">排课管理</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/course/edit_course_schedule?id=<%= courseScheduleObj.id%>">编辑排课</a>
</li>
<%- contentFor('script')%>
<script>
    $(function() {
        $('form').validate({
            errorClass: 'help-inline', // default input error message class
            rules: {
                lesson_date: {
                    required: true
                },
                lesson_period_id: {
                    required: true
                },
                teacher_id: {
                    required: true
                },
                class_room_id: {
                    required: true
                }
            },
            messages: {
                lesson_date: {
                    required: "请选择上课日期"
                },
                lesson_period_id: {
                    required: "请选择课时"
                },
                teacher_id: {
                    required: "请选择教师"
                },
                class_room_id: {
                    required: "请选择教室"
                }
            },
            errorPlacement: function(error, element) {
                error.appendTo( element.parents('.controls') );
            },
            highlight: function (element) { // hightlight error inputs
                $(element)
                    .closest('.help-inline').removeClass('ok'); // display OK icon
                $(element)
                    .closest('.control-group').removeClass('success').addClass('error'); // set error class to the control group
            },
            unhighlight: function (element) { // revert the change dony by hightlight
                $(element)
                    .closest('.control-group').removeClass('error'); // set error class to the control group
            },
            success: function (label) {
                label
                    .addClass('valid').addClass('help-inline ok') // mark the current input as valid and display OK icon
                    .closest('.control-group').removeClass('error').addClass('success'); // set success class to the control group
            }
        });
    });

    $('#lesson_date').on('change', function () {
        selectChange('lesson_date');
    })
    $('#lesson_period_id').on('change', function () {
        selectChange('lesson_period_id');
    })

    function selectChange(select_name) {
        $.post('/course/course_schedule_select_change', {select_name: select_name, lesson_date: $('#lesson_date').val(),
            lesson_period_id: $('#lesson_period_id').val(), grade_id: $('#grade_id').val(), sbuject_id: $('#sbuject_id').val(),
            id: '<%= courseScheduleObj.id%>'}, function (result) {
            if (select_name == 'lesson_period_id') {
                resetOptions('lesson_period_id', result.lessonPeriods);
            }
            resetOptions('teacher_id', result.teachers);
            resetOptions('class_room_id', result.classRooms);
        })
    }

    function resetOptions(select_name, data) {
        let optionData = [];
        for (let i = 0; i < data.length; i++) {
            optionData.push({id: data[i].id, text: data[i].name});

        }
        let s = $('#'+select_name);
        s.select2('destroy').empty();
        s.select2({
            placeholder: "",
            data: optionData,
            formatNoMatches: function () { return "没有找到匹配项"; },
            formatLoadMore: function () { return "加载结果中…"; },
            formatSearching: function () { return "搜索中…"; }
        });
    }
</script>