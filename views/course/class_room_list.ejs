<div class="row-fluid">
    <div class="span12">
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                </div>
                <div class="actions">
                    <a href="/course/new_class_room" class="btn green"><i class="icon-plus"></i> 新增教室</a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="booking-search">
                    <form action="/course/class_room_list">
                        <div class="clearfix">
                            <div class="control-group span3">
                                <label class="control-label">教室名称:</label>
                                <div class="controls">
                                    <input name="name" class="m-wrap span12" type="text" value="<%= condition.name%>">
                                </div>
                            </div>
                            <div class="control-group span3">
                                <label class="control-label">教室状态:</label>
                                <div class="controls">
                                    <select class="span12 select2" tabindex="1" name="status_id" id="status_id">
                                        <option value=""></option>
                                        <%for (let i = 0; i < status.length; i++){%>
                                        <option value="<%= status[i].id%>"><%= status[i].name%></option>
                                        <%}%>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                            <div class="pull-right">
                                <button class="btn yellow"><i class="icon-search m-icon-white"></i> 搜索</button>
                            </div>
                        </div>
                    </form>
                </div>
                <table class="table table-list table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>教室名称</th>
                        <th>教室状态</th>
                        <th>创建时间</th>
                        <th class="table_action" data-colNum=3>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%for (let i = 0; i < classRooms.length; i++){%>
                    <tr>
                        <td><%= classRooms.name%></td>
                        <td><%= statusMap[classRooms.status_id].name%></td>
                        <td><%= dateUtil.dateFormat(classRooms[i].create_at)%></td>
                        <td>
                            <a href="/course/edit_class_room?id=<%= classRooms[i].id%>" class="btn blue mini"><i class="icon-pencil"></i> 编辑</a>
                        </td>
                    </tr>
                    <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- contentFor('title')%>
教室管理
<%- contentFor('breadcrumb')%>
<li>
    <i class="icon-angle-right"></i>
    <a href="javascript:void(0);">排课</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/course/class_room_list">教室管理</a>
</li>
<%- contentFor('script')%>
<script>
    $('#status_id').val('<%= condition.status_id%>');
</script>