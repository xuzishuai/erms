<div class="row-fluid">
    <div class="span12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                </div>
                <div class="actions">
                    <a href="/course/<%= backUrl%>" class="btn yellow"><i class="icon-chevron-left"></i> 返回</a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal form-view">
                    <h3 class="form-section">教师信息</h3>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">教师姓名:</label>
                                <div class="controls">
                                    <span class="text bold"><%= teacher.name%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">性别:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (teacher.gender == '0'){%>男<%}else{%>女<%}%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">联系电话:</label>
                                <div class="controls">
                                    <span class="text bold"><%= teacher.contact%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">年级:</label>
                                <div class="controls">
                                    <span class="text bold"><%= teacher.grades%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >科目:</label>
                                <div class="controls">
                                    <span class="text bold"><%= subjectMap[teacher.subject_id].name%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >是否兼职:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (teacher.is_part_time == '0'){%>否<%}else{%>是<%}%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >状态:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (teacher.status == '0'){%>已离职<%}else{%>在职<%}%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3 class="form-section">空闲时间</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th width="30%">日期</th>
                            <th width="70%">课时</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%for (let i = 0; i < freeTimes.length; i++) {%>
                        <tr>
                            <td><%= dateUtil.dateFormat(freeTimes[i].free_date)%></td>
                            <td><%= freeTimes[i].lessonPeriods%></td>
                        </tr>
                        <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<%- contentFor('title')%>
教师详情
<%- contentFor('breadcrumb')%>
<li>
    <i class="icon-angle-right"></i>
    <a href="javascript:void(0);">排课</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/course/teacher_list">教师管理</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/course/teacher_view?id=<%= teacher.id%>&back_url=<%= backUrl%>">教师详情</a>
</li>
<%- contentFor('script')%>