<div class="row-fluid">
    <div class="span12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                </div>
                <div class="actions">
                    <a href="/student/student_list" class="btn yellow"><i class="icon-chevron-left"></i> 返回</a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="/student/do_update_student" class="form-horizontal" method="post">
                    <input id="id" name="id" value="<%= student.id%>" type="hidden">
                    <div class="control-group">
                        <label class="control-label">姓名<span class="required">*</span></label>
                        <div class="controls">
                            <input type="text" class="m-wrap span6" name="name" id="name" value="<%= student.name%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">性别<span class="required">*</span></label>
                        <div class="controls">
                            <label class="radio">
                                <input type="radio" name="gender" value="0" <%if (student.gender==0){%>checked<%}%> />男
                            </label>
                            <label class="radio">
                                <input type="radio" name="gender" value="1" <%if (student.gender==1){%>checked<%}%> />女
                            </label>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">年级<span class="required">*</span></label>
                        <div class="controls">
                            <select class="span6 select2" tabindex="1" name="grade_id" id="grade_id">
                                <option value="">请选择年级</option>
                                <%for (let i = 0; i < grades.length; i++){%>
                                <option <%if (student.grade_id==grades[i].id){%>selected<%}%> value="<%= grades[i].id%>"><%= grades[i].name%></option>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">联系电话<span class="required">*</span></label>
                        <div class="controls">
                            <input type="text" class="m-wrap span6" name="contact" id="contact" value="<%= student.contact%>">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">预约上门时间<span class="required">*</span></label>
                        <div class="controls">
                            <div class="input-append date form_datetime">
                                <input id="appointment_time" name="appointment_time" size="16" type="text" readonly class="m-wrap" value="<%= dateUtil.dateTimeFormat(student.appointment_time)%>"/>
                                <span class="add-on"><i class="icon-remove"></i></span>
                                <span class="add-on"><i class="icon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">途径<span class="required">*</span></label>
                        <div class="controls">
                            <select class="span6 select2" tabindex="1" name="source_id" id="source_id">
                                <option value="">请选择途径</option>
                                <%for (let i = 0; i < sources.length; i++){%>
                                <option <%if (student.source_id==sources[i].id){%>selected<%}%> value="<%= sources[i].id%>"><%= sources[i].name%></option>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">从何得知</label>
                        <div class="controls">
                            <select class="span6 select2" tabindex="1" name="how_know_id" id="how_know_id">
                                <option value=""></option>
                                <%for (let i = 0; i < howKnows.length; i++){%>
                                <option <%if (student.how_know_id==howKnows[i].id){%>selected<%}%> value="<%= howKnows[i].id%>"><%= howKnows[i].name%></option>
                                <%}%>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">备注</label>
                        <div class="controls">
                            <textarea name="note" class="span6 m-wrap" rows="3"><%= student.note%></textarea>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn green"><i class="icon-ok"></i> 提交</button>
                        <button type="button" class="btn" onclick="javascript:history.back(-1);"><i class="icon-remove"></i> 取消</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- contentFor('title')%>
编辑客户
