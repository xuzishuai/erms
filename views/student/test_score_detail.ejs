<div class="row-fluid">
    <div class="span12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                </div>
                <div class="actions">
                    <a href="/student/student_details?id=<%= student.id%>" class="btn yellow"><i class="icon-chevron-left"></i> 返回</a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal form-view">
                    <h3 class="form-section">学员信息</h3>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">学员编号:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.student_no%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">学员姓名:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.name%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">教育顾问:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.adviser_id){%><%= userMap[student.adviser_id].name%><%}%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">年级:</label>
                                <div class="controls">
                                    <span class="text bold"><%= gradeMap[student.grade_id].name%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">班主任:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.headmaster_id){%><%= userMap[student.headmaster_id].name%><%}%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">就读学校:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.school%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >性别:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.gender == 0){%>男<%} else {%>女<%}%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >出生日期:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.birthday){%><%= dateUtil.dateFormat(student.birthday)%><%}%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >家庭住址:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.home_address%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >联系电话:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.contact%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >备注:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.note%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h3 class="form-section">校考成绩</h3>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">学年:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.school_year%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">年级:</label>
                                <div class="controls">
                                    <span class="text bold"><%= gradeMap[testScore.grade_id].name%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">考试日期:</label>
                                <div class="controls">
                                    <span class="text bold"><%= dateUtil.dateFormat(testScore.test_date)%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">考试类型:</label>
                                <div class="controls">
                                    <span class="text bold"><%= typeMap[testScore.type_id].name%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">班级人数:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.class_size%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">班级排名:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.class_rank%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">科目:</label>
                                <div class="controls">
                                    <span class="text bold"><%= subjectMap[testScore.subject_id].name%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">中/高考录取学校:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.enroll_school%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">卷面分:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.score%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">总分:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.total_score%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >辅导老师评价:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.teacher_assess%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >家长评价:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.parents_assess%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >班主任评价:</label>
                                <div class="controls">
                                    <span class="text bold"><%= testScore.headmaster_assess%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- contentFor('title')%>
校考详情
<%- contentFor('breadcrumb')%>
<li>
    <i class="icon-angle-right"></i>
    <a href="javascript:void(0);">学员</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/student/signed_student_list">学员管理</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/student/student_details?id=<%= student.id%>">学员详情</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/student/test_score_detail?id=<%= testScore.id%>">校考详情</a>
</li>
<%- contentFor('script')%>