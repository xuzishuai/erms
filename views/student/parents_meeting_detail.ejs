<div class="row-fluid">
    <div class="span12">
        <div class="portlet box grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>
                </div>
                <div class="actions">
                    <a href="/student/parents_meeting_search_list" class="btn yellow"><i class="icon-chevron-left"></i> 返回</a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal form-view">
                    <h3 class="form-section">学员信息</h3>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">学员编号:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.student_no%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">学员姓名:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.name%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">教育顾问:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.adviser_id){%><%= userMap[student.adviser_id].name%><%}%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">年级:</label>
                                <div class="controls">
                                    <span class="text bold"><%= gradeMap[student.grade_id].name%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">班主任:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.headmaster_id){%><%= userMap[student.headmaster_id].name%><%}%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">就读学校:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.school%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >性别:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.gender == 0){%>男<%} else {%>女<%}%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >出生日期:</label>
                                <div class="controls">
                                    <span class="text bold"><%if (student.birthday){%><%= dateUtil.dateFormat(student.birthday)%><%}%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >家庭住址:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.home_address%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label" >联系电话:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.contact%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >备注:</label>
                                <div class="controls">
                                    <span class="text bold"><%= student.note%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-horizontal form-view">
                    <h3 class="form-section">家长会信息</h3>
                    <div class="row-fluid">
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">召开时间:</label>
                                <div class="controls">
                                    <span class="text bold"><%= dateUtil.dateTimeMinuteFormat(parentsMeeting.start_time)%></span>
                                </div>
                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">与会人:</label>
                                <div class="controls">
                                    <span class="text bold"><%= parentsMeeting.attendee%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >操作人:</label>
                                <div class="controls">
                                    <span class="text bold"><%= parentsMeeting.operator%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >学员目前学习情况:</label>
                                <div class="controls">
                                    <span class="text bold"><%= parentsMeeting.situation%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >家长问题反馈和意见:</label>
                                <div class="controls">
                                    <span class="text bold"><%= parentsMeeting.suggestion%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >解决建议与行动方案:</label>
                                <div class="controls">
                                    <span class="text bold"><%= parentsMeeting.solution%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- contentFor('title')%>
家长会详情
<%- contentFor('breadcrumb')%>
<li>
    <i class="icon-angle-right"></i>
    <a href="javascript:void(0);">学员</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/student/parents_meeting_list">家长会</a>
</li>
<li>
    <i class="icon-angle-right"></i>
    <a href="/student/parents_meeting_detail?id=<%= parentsMeeting.id%>">家长会详情</a>
</li>
<%- contentFor('script')%>